<h2>Contact me</h2>

{{#if isSent}}
  <div class="isSent">
    <p>The message has been sent!</p>
    {{#if imageUrl}}
      <img
        src="{{imageUrl}}"
        alt="Uploaded Image"
        style="max-width: 300px; margin: 10px auto;"
      />
    {{/if}}
  </div>
{{/if}}

{{#if isError}}
  <div class="isError">You can't leave fields empty!</div>
{{/if}}

<form
  method="POST"
  action="/contact/send-message"
  enctype="multipart/form-data"
>
  <label>
    Your name:
    <input type="text" name="author" />
  </label>
  <label>
    Your email:
    <input type="email" name="sender" />
  </label>
  <label>
    Title:
    <input type="text" name="title" />
  </label>
  <label>
    Message:
    <textarea name="message"></textarea>
  </label>
  <label>
    Project design:
    <input type="file" name="design" accept=".png,.jpg,.jpeg,.gif" />
  </label>
  <button type="submit">Send message</button>
</form>