<h2>Contact me</h2>

{{#if isSent}}
  <div class="isSent">
    The message has been sent!
    {{#if fileName}}<br />File {{fileName}} has been saved.{{/if}}
  </div>
{{/if}}

{{#if isError}}
  <div class="isError">You can't leave fields empty!</div>
{{/if}}

<form
  method="POST"
  action="/contact/send-message"
  enctype="multipart/form-data"
>
  <label>
    Your name:
    <input type="text" name="author" />
  </label>
  <label>
    Your email:
    <input type="email" name="sender" />
  </label>
  <label>
    Title:
    <input type="text" name="title" />
  </label>
  <label>
    Message:
    <textarea name="message"></textarea>
  </label>
  <label>
    Project design:
    <input type="file" name="design" accept=".png,.jpg,.jpeg,.gif" />
  </label>
  <button type="submit">Send message</button>
</form>